<%= form_with(model: [job, task], local: true) do |form| %>
  <%= render "Shared/errors", object: task %>

<form>
  <div class="form_group">
    <%= form.label :Omschrijving, class: 'form-control' %>
    <%= form.text_area :description, id: :task_description, class: 'form-control' %>
  </div>

  <div class="form_group">
    <%= form.label :Bestand, class: 'form-control' %>
    <%= form.text_field :file, id: :task_file, class: 'form-control' %>
  </div>
<br>
  <div class="btn-group" role="group">
    <%= form.submit "Opslaan", :class => "btn btn-secondary" %>
  </div>
<% end %>

</form>
