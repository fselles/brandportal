<h3>Overzicht <%= pluralize(@users.size, 'User') %></h3>


<div>
  <% @users.each do |user| %>
    <div>
      <h4><%= link_to user.name, user %></h4>
    </div>
  <% end %>
</div>

<% if current_user && current_user.admin? %>
<%= link_to "Nieuwe gebruiker", new_user_path, :class => "btn btn-secondary" %>
<% end %>
