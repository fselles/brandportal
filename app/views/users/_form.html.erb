<%= form_for(user) do |f| %>
  <%= render "Shared/errors", object: user %>

  <form>
      <div>
        <%= f.label :name, class: 'form-control-label'  %>
        <%= f.text_field :name, size: 40, autofocus: true, class: 'form-control'  %>
      </div>
      <div>
        <%= f.label :Bedrijf, class: 'form-control-label'  %>
        <%= f.text_field :company, size: 40, autofocus: true, class: 'form-control'  %>
      </div>
      <div>
        <%= f.label :email, class: 'form-control-label'  %>
        <%= f.email_field :email, size: 40, class: 'form-control'  %>
      </div>
      <div>
        <%= f.label :password, class: 'form-control-label'  %>
        <%= f.password_field :password, size: 40, class: 'form-control'  %>
      </div>
      <div>
        <%= f.label :password_confirmation, "Confirm Password", class: 'form-control-label'  %>
        <%= f.password_field :password_confirmation, size: 40, class: 'form-control'  %>
      </div>
      <div>
        <%= f.label :admin, class: 'form-control-label' %>
        <%= f.check_box :admin, class: 'form-control' %>
      </div>
      <br>
      <div>
      <% if @user.new_record? %>
        <%= f.submit "Account opslaan", :class => "btn btn-secondary" %>
      <% else %>
        <%= f.submit "Account updaten", :class => "btn btn-secondary" %>
      <% end %>
      </div>
  </form>
<% end %>
