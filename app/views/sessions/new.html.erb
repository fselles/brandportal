<header id="content-header">
  <h3>Inloggen</h3>
</header>

<%= form_tag(session_path) do %>
    <div class="input-group">
          <%= email_field_tag :email, nil, autofocus: true, :class => "form-control", placeholder: "Email adres" %>
    </div>

    <div class="input-group">
      <%= password_field_tag :password, nil, :class => "form-control", placeholder: "Wachtwoord" %>
      </div>
      <br>
    <div>
      <%= submit_tag 'Inloggen', :class => "btn btn-secondary" %>
    </div>

<% end %>
